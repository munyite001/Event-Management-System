extends layout

block content
    h1.sub-title= subTitle

    form(method="POST" class="create-form")
        div.input-box
            label(for="name") Name:
            input(type="text" name="name" id="name" placeholder="e.g., Jane Doe" required value=(undefined==organizer ? '' : organizer.name))
        div.input-box
            label(for="email") Email:
            input(type="email" name="email" id="email" placeholder="name@example.com" required value=(undefined==organizer ? '' : organizer.email))
        div.input-box
            label(for="phone") Phone:
            input(type="number" name="phone" id="phone" required placeholder="254 768 696 87" value=(undefined==organizer ? '' : organizer.phone))
        button.btn(type="submit") Submit

    if errors
        ul
            each error in errors
                li(style="color: red;")= error.msg
